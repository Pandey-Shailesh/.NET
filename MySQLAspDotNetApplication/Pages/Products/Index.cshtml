@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        toastr.success('@TempData["success"]')
    </script>
}



<html>
    <body>

        <div class=" container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">
                        List of Products
                    </h2>
                </div>
                <div class="col-6">
                    <a asp-page="Create" class="btn btn-primary">
                        Add Products
                    </a>
                 </div>
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Product Quantity</th>
                        <th>Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var item in Model.Products)
                {
                    <tr>
                        <td width="20%">@item.productId</td>
                        <td width="20%">@item.productName</td>
                        <td width="20%">@item.price</td>
                        <td width="20%">@item.quantity</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="Edit" class="btn btn-warning mx-2">Edit</a>
                                <a asp-page="Delete" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </body>
</html>